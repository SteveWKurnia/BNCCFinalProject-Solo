<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.MainActivity"
    android:background="@color/indigo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <TextView
            android:text="@string/indonesia"
            android:textColor="#fff"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:srcCompat="@drawable/ic_info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_main"
        app:srcCompat="@drawable/ic_virus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_total_case"
        android:text="86521"
        style="@style/h1"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tv_total_case_static"
        android:text="Total Cases"
        style="@style/b1"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_case"/>

    <ProgressBar
        android:id="@+id/pb_load_total_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:indeterminateTint="@color/off_white"/>

    <LinearLayout
        android:id="@+id/ll_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@drawable/shape">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:alignContent="space_around"
            app:flexDirection="column"
            android:layout_marginTop="20dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_positive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/teal"
                app:cardElevation="5dp"
                android:padding="5dp">

                <ProgressBar
                    android:id="@+id/pb_positive_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/off_white"/>

                <LinearLayout
                    android:id="@+id/ll_positive_case"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_positive_case"
                        android:text="4163"
                        style="@style/h4"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Positive"
                        style="@style/b2"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_recovered"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/green"
                app:cardElevation="5dp">

                <ProgressBar
                    android:id="@+id/pb_recovered_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/off_white"/>

                <LinearLayout
                    android:id="@+id/ll_recovered_case"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_recovered_case"
                        android:text="45401"
                        android:textColor="#fff"
                        style="@style/h4"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Recovered"
                        style="@style/b2"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_death"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ed646a"
                app:cardElevation="5dp"
                app:layout_constraintStart_toEndOf="@id/cv_recovered"
                app:layout_constraintEnd_toEndOf="parent">

                <ProgressBar
                    android:id="@+id/pb_death_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/off_white"/>

                <LinearLayout
                    android:id="@+id/ll_death_case"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_death_case"
                        android:text="4163"
                        android:textColor="#fff"
                        style="@style/h4"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Death"
                        style="@style/b2"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:text="@string/get_to_know_more"
            style="@style/h4"
            android:textColor="@color/indigo2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_lookup"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/violet_shape_rounded_corners_10dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_first_item"
                app:srcCompat="@drawable/ic_location_pin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_first_caption"
                android:text="@string/sample_caption"
                style="@style/h4"
                android:textColor="@color/indigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_first_item"
                app:layout_constraintTop_toTopOf="@id/iv_first_item"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_first_body"
                android:text="@string/sample_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/b2"
                app:layout_constraintStart_toEndOf="@id/iv_first_item"
                app:layout_constraintTop_toBottomOf="@id/tv_first_caption"
                android:layout_marginStart="10dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                app:srcCompat="@drawable/ic_chevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/violet_shape_rounded_corners_10dp"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_second_item"
                app:srcCompat="@drawable/ic_siren"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_second_caption"
                android:text="@string/sample_caption"
                style="@style/h4"
                android:textColor="@color/indigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_second_item"
                app:layout_constraintTop_toTopOf="@id/iv_second_item"
                android:layout_marginStart="10dp"/>

            <TextView
                android:text="@string/sample_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/b2"
                app:layout_constraintTop_toBottomOf="@id/tv_second_caption"
                app:layout_constraintStart_toEndOf="@id/iv_second_item"
                android:layout_marginStart="10dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                app:srcCompat="@drawable/ic_chevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_total_case"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_total_case_static, tv_total_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>