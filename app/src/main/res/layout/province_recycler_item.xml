<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="15dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">
            
            <TextView
                android:id="@+id/tv_province_name"
                android:text="@string/indonesia"
                style="@style/h4"
                android:textColor="@color/indigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_province_pos"
                android:text="123455"
                style="@style/h5"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/circular_shape_blue"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_province_name"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_province_rec"
                android:text="123455"
                style="@style/h5"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/circular_shape_green"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toEndOf="@id/tv_province_pos"
                app:layout_constraintEnd_toStartOf="@id/tv_province_death"
                app:layout_constraintTop_toBottomOf="@id/tv_province_name"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_province_death"
                android:text="123455"
                style="@style/h5"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/circular_shape_red"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_province_name"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>        

    </androidx.cardview.widget.CardView>

</LinearLayout>